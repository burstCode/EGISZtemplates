@model IEnumerable<EGISZtemplates.Models.Template>

@{
    ViewData["Title"] = "Управление шаблонами";
}

<h1>Список шаблонов</h1>

@* Таблица с данными из БД *@
<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Наименование шаблона</th>
            <th>Дата последнего обновления</th>
            <th>Выбрать</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TemplateFilename</td>
                <td>@item.LastUpdated</td>
                <td>
                    <input type="radio" name="selectedTemplate" value="@item.Id" />
                </td>
            </tr>
        }
    </tbody>
</table>

@* Форма для обновления шаблона *@
<form id="updateForm" asp-action="UpdateTemplate" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Загрузить новый шаблон</label>
        <input type="file" name="file" class="form-control" required />
    </div>
    <input type="hidden" name="id" id="selectedTemplateId" />
    <button type="submit" class="btn btn-primary">Обновить шаблон</button>
</form>

<hr />

@* Форма для загрузки нового шаблона *@
<h2>Добавить новый шаблон</h2>

<form asp-action="AddTemplate" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="id">Код шаблона</label>
        <input type="number" name="id" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="file">Загрузить файл</label>
        <input type="file" name="file" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Добавить шаблон</button>
</form>

@* 
    Красивые уведомления об ошибочных и успешных действиях 
    P.S. КАКИЕ УВЕДОМЛЕНИЯ TOASTR КЛАССНЫЕ ВАЙ ВАЙ ВАЙ!
*@
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet"/>

    <script>
        document.querySelectorAll('input[name="selectedTemplate"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.getElementById('selectedTemplateId').value = this.value;
            });
        });

        document.getElementById('updateForm').addEventListener('submit', function(event) {
            var selectedTemplateId = document.getElementById('selectedTemplateId').value;
            if (!selectedTemplateId) {
                toastr.error("Сначала выберите шаблон для обновления!");
                event.preventDefault();
            }
        });

        $(document).ready(function() {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                toastr.success(successMessage);
            }
        });
    </script>
}
